# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  text: String!
  done: Boolean!
  userId: String!
}

input CreateTodoInput {
  text: String!
  userId: String!
  done: Boolean
}

input UpdateTodoInput {
  id: ID!
  text: String
  done: Boolean
}

type Mutation {
  createTodo(input: CreateTodoInput!): Todo!
  updateTodo(input: UpdateTodoInput!): Todo!
}

type Query {
  todo(id:ID!): Todo
}
